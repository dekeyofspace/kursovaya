<Page x:Class="kursova.AddTovPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursova"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="936"
      Title="AddTovPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="627*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#F1D9DD" Orientation="Vertical">
            <TextBlock  TextAlignment="Center" Text="Регистрация сотрудника" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="50" FontSize="35 " Margin="20"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Height="600" Width="735">
            <StackPanel Orientation="Horizontal" Width="545">
                <TextBlock Text="Категория" Width="163" Height="60" FontSize="32" Foreground="Black"/>
                <ComboBox Name="cmbCate" Width="300" Height="60" Margin="20" FontSize="26"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="545">
                <TextBlock Text="Товар" Width="163" Height="60" FontSize="32" Foreground="Black"/>
                <TextBox Name="txbTov" Width="300" Height="60" Margin="20" FontSize="26"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="545">
                <TextBlock Text="Количество" Width="170" Height="60" FontSize="32" Foreground="Black"/>
                <TextBox Name="txbKol" Width="300" Height="60" Margin="20" FontSize="26"/>
            </StackPanel>
            <Button Content="Заказать товар" FontSize="32" Background="#F1D9DD" Height="60" Width="400" Margin="80" Click="Button_Click"/>
        </StackPanel>
        <Button Content="Назад" FontSize="32" Background="#F1D9DD" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="200" Height="50" Margin="20" Click="Button_Click_1"/>
    </Grid>
</Page>
